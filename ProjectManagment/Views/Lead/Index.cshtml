@model List<ProjectManagment.context.entities.Project>

<h2>List of Projects</h2>     

<h2><button><a asp-action="Add" asp-controller="Lead">Add Project</a></button></h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Id</td>
                <td>@project.Name</td>
                <td>@project.Describtion</td>
                <td><button><a asp-action="Edit" asp-controller="Lead" asp-route-Id="@project.Id">Edit</a> </button> <button><a asp-action="Delete" asp-controller="Lead" asp-route-Id="@project.Id">Delete</a> </button>    <button><a asp-action="tasks" asp-controller="Lead" asp-route-Id="@project.Id">Show Tasks</a> </button></td>
            </tr>
        }
    </tbody>
</table>